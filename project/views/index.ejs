<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
  <div class="main w-full min-h-screen bg-zinc-100">
    <div class="form">
      <form action="/create" method="post">
        <input class="block px-5 py-2 bg-zinc-400" type="text" placeholder="Title" name="title" />
        <textarea class="block px-5 py-2 bg-zinc-400 resize-none" placeholder=" task detail here"
          name="detail"></textarea>
        <input type="submit" value="Create task" class="text-blue-500" />
      </form>
    </div>
    <div class="task p-10 flex gap-4 flex-wrap">
      <% if(files.length>0){%> <% files.forEach(function(val){%>
          <div class="task w-72 px-3 rounded-md bg-zinc-400">
            <h1 class="text-white text-3xl tracking-tighter">
              <%=val%>
            </h1>
            <div class="flex w-full justify-between items-center">
              <a href="/files/<%=val%>" class="text-blue-500 inline-block mt-3">read more</a>
              <a href="/edit/<%= val%>">Edit</a>
            </div>
          </div>
          <%})%>
            <% } else { %>
              <h3>No task yet!</h3>
              <% } %>
    </div>
  </div>
</body>

</html>