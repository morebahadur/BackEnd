<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= listing.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .listing-card {
      margin: 1rem auto;
      max-width: 800px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      background-color: white;
      border-radius: 0.5rem;
      overflow: hidden;
    }

    .listing-img {
      width: 100%;
      height: 300px;
      object-fit: cover;
      display: block;
    }

    @media (max-width: 768px) {
      .listing-img {
        height: 250px;
      }
    }

    .container {
      max-width: 400px;
      min-height: 120vh;
      margin: 0 auto;
      padding: 1rem;
    }

    .btn-group {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-top: 1rem;
    }

    @media (max-width: 768px) {
      .btn-group {
        flex-direction: column;
      }

      .btn {
        width: 100%;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="listing-card">
      <img src="<%= listing.image.url %>" class="listing-img" alt="<%= listing.title %>">
      <div class="p-3">
        <h2><%= listing.title %></h2>
        <p><%= listing.description %></p>
        <p>
          <i class="fas fa-map-marker-alt"></i>
          <%= listing.location %>, <%= listing.country %>
        </p>
        <p>
          <i class="fas fa-rupee-sign"></i>
          â‚¹<%= typeof listing.price === 'number' ? listing.price.toLocaleString("en-IN") : listing.price %> 
        </p>
        <div class="btn-group">
          <a href="/listings" class="btn btn-primary">Back to All Listings</a>
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-success">Edit</a>
          <form class="d-inline" action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>