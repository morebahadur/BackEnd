<% layout("/layout/boilerplate")%>

<body>
  <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2">
    <% for(let list of allListings){ %>
    <a href="/listings/<%=list._id%>" class="listing-link">
      <div class="card">
        <img src="<%=list.image.url%>" class="card-img-top" alt="listing images" style="height: 20rem;">
        <div class="card-img-overlay">abcd</div>
        <div class="card-body">
          <p class="card-text">
            <b>
              <%=list.title%>
            </b> <br>
            <%=list.location%>,
            <%=list.country%>
            <br>
            &#8377; <%= list.price.toLocaleString("en-IN")%> /night
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>